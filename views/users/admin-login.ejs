<% layout('layouts/boilerplate') %>

<h1 class="mb-4">Admin Log In</h1>
<p class="text-muted">Only administrators can access this area.</p>

<form action="/admin/login" method="POST" class="mb-3">
  <div class="mb-3">
    <label class="form-label" for="admin-email">Admin Email</label>
    <input
      type="email"
      id="admin-email"
      name="email"
      class="form-control"
      required
    />
  </div>

  <div class="mb-3">
    <label class="form-label" for="admin-password">Password</label>
    <input
      type="password"
      id="admin-password"
      name="password"
      class="form-control"
      required
    />
  </div>

  <button class="btn btn-danger">Log In as Admin</button>
</form>

<p class="small">
  Looking for the regular user login?
  <a href="/login">Go to the user login page</a>.
</p>


